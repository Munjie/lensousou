@import "../bank-card/bank-card.wxss";

.show_button {
    width: 240rpx;
    height: 72rpx;
    border-radius: 6rpx;
    border: 1px solid rgba(47,128,240,1);
    color: #2F80F0;
    font-size: 32rpx;
    line-height: 72rpx;
    background-color: white;
}

.show_button::after {
    border: none;
}

.merge-swiper-container {
    padding-top: 8rpx;
    padding-bottom: 28rpx;
}

.disable {
    border: 1px solid rgba(192,206,223,1);
    color: #C0CEDF;
}

.show-box {
    border-top: 2rpx solid rgba(238,238,238,1);
    height: 160rpx;
    display: flex;
    align-items: center;
    border-bottom: 2rpx solid rgba(238,238,238,1);
}

.share-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(245,247,251,1);
    padding-top: 24rpx;
    display: none;
    z-index: 1000;
}

.show {
    display: block;
}

.image-box {
    width: 630rpx;
    height: 1000rpx;
    display: block;
    margin: 0 auto;
    position: relative;
}

.share-img {
    width: 630rpx;
    height: 1000rpx;
    display: block;
    margin: 0 auto;
}

.share-box {
    text-align: center;
}

.share-box .btn {
    width: 240rpx;
    height: 72rpx;
    background: rgba(255,255,255,1);
    border-radius: 6rpx;
    font-size: 32rpx;
    font-family: PingFangSC-Regular;
    color: rgba(47,128,240,1);
    line-height: 72rpx;
    display: inline-block;
    margin: 30rpx 40rpx;
}

.btn::after {
    border: 2rpx solid #2F80F0;
}

.result-image-box {
    position: absolute;
}

.result-image-box image {
    max-width: 100%;
    max-height: 100%;
    border-radius: 8rpx;
    box-sizing: border-box;
    border: 4rpx solid rgba(255,255,255,1);
}

.merge-box {
    width: 122rpx;
    height: 122rpx;
    top: 122rpx;
    left: 164rpx;
}

.template-box {
    width: 122rpx;
    height: 122rpx;
    top: 122rpx;
    right: 164rpx;
}

.result-box {
    width: 560rpx;
    height: 420rpx;
    top: 304rpx;
    left: 36rpx;
}

.btn-image {
    width: 160rpx;
    height: 160rpx;
}

.min {
    padding-top: 14rpx;
}

.min .share-box .btn {
    margin: 4rpx 40rpx;
}

.footer-box {
    border-top: 2rpx solid rgba(238,238,238,1);
    position: fixed;
    width: 100%;
    bottom: 0;
    background-color: white;
}