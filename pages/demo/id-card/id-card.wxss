@import "../bank-card/bank-card.wxss";

.id-card-page {
    padding-bottom: 80rpx;
}

.swiper-tab {
    width: 100%;
    border-top: 2rpx solid #eee;
    text-align: center;
    line-height: 100rpx;
    background: #fff;
    font-size: 28rpx;
}

.swiper-tab-list {
    font-size: 28rpx;
    font-family: PingFangSC-Regular;
    color: rgba(0,148,222,1);
    float: left;
    width: 50%;
    color: #333;
}

.swiper-box {
    height: 1500rpx;
}

.swiper-item-box {
    overflow-y: scroll;
}

.on {
    color: #0094DE;
    border-bottom: 5rpx solid #0094DE;
}