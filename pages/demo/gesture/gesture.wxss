@import "../bank-card/bank-card.wxss";

.opacity {
    opacity: 0.5;
    background: rgba(0,0,0,1);
}

.demo-result-content {
    min-height: 0rpx;
    text-align: center;
    background-color: white;
    padding-bottom: 50rpx;
}

.demo-result-title {
    background-color: white;
}

.demo-main-container {
    min-height: 0rpx;
}

.name {
    font-size: 72rpx;
    line-height: 100rpx;
    font-family: PingFangSC-Medium;
    color: rgba(47,128,240,1);
    padding-top: 26rpx;
}

.per {
    font-size: 32rpx;
    font-family: PingFangSC-Regular;
    color: rgba(102,102,102,1);
    line-height: 44rpx;
    padding-top: 8rpx;
}

.ges_img {
    padding-top: 20rpx;
    width: 106rpx;
    height: 106rpx;
}

.invalid-title {
    padding-top: 40rpx;
    font-size: 40rpx;
    font-family: PingFangSC-Regular;
    color: rgba(155,155,155,1);
    line-height: 56rpx;
}

.add {
    font-size: 32rpx;
    font-family: PingFangSC-Medium;
    color: rgba(47,128,240,1);
    line-height: 44rpx;
}

.add-modal-box {
    position: fixed;
    width: 100%;
    height: 100%;
    background-color: black;
    opacity: 0.5;
    top: 0;
    left: 0;
    display: none;
}

.modal {
    position: fixed;
    left: 50%;
    top: 50%;
    margin-top: -416rpx;
    margin-left: -315rpx;
    width: 630rpx;
    height: 832rpx;
    border-radius: 20rpx;
    background-color: white;
    display: none;
}

.opacity_modal {
    display: block;
}

.top {
    height: 494rpx;
    background: rgba(218,238,255,1);
    text-align: center;
    border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx;
}

.top-title {
    font-size: 36rpx;
    font-family: PingFangSC-Medium;
    color: rgba(74,74,74,1);
    line-height: 50rpx;
    padding: 28rpx 0 24rpx 0;
}

.img-ges {
    max-width: 368rpx;
    max-height: 272rpx;
}

.opacity_modal_box {
    display: block;
}

.input-box {
    width: 550rpx;
    height: 72rpx;
    background: rgba(255,255,255,1);
    border-radius: 6rpx;
    border: 1px solid rgba(185,216,255,1);
    margin: 0 auto;
    position: relative;
    margin-top: 10rpx;
}

.close {
    width: 36rpx;
    height: 36rpx;
    position: absolute;
    top: 26rpx;
    right: 26rpx;
}

.btn {
    position: absolute;
    right: 0;
    top: 0;
    width: 112rpx;
    height: 72rpx;
    background-color: transparent;
    font-size: 32rpx;
    font-family: PingFangSC-Medium;
    color: rgba(47,128,240,1);
    padding: 0;
    line-height: 72rpx;
}

.true {
    border: 2rpx solid rgba(244,85,98,1);
}

.input {
    width: 430rpx;
    height: 72rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Regular;
    color: rgba(155,155,155,1);
    text-align: left;
    padding-left: 20rpx;
}

.btn::after {
    border: none;
}

.complete {
    font-size: 28rpx;
    font-family: PingFangSC-Regular;
    color: rgba(79,129,198,1);
    line-height: 40rpx;
    padding-top: 34rpx;
}

swiper {
    position: relative;
    height: 238rpx;
}

.swiper_image {
    width: 630rpx;
    height: 210rpx;
}

.bottom {
    height: 338rpx;
    background-color: white;
    border-radius: 20rpx;
    text-align: center;
}

.bottom-title {
    font-size: 28rpx;
    font-family: PingFangSC-Regular;
    color: rgba(74,74,74,1);
    line-height: 40rpx;
    padding: 28rpx 0 0 0;
}