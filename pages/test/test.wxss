.index {
    min-height: 100vh;
    font-size: 24px;
    padding: 0;
    margin: 0;
    width: 100%;
    background-repeat: no-repeat;
    background-size: 100% 100%;
    background-image: url(http://img.juimg.com/tuku/yulantu/140329/330541-14032923050294.jpg);
    display: block;
}

.location {
    border: 2rpx solid #ff5252;
    border-radius: 30px;
    width: 400rpx;
    margin: 20rpx auto 40rpx auto;
    padding: 10rpx 10rpx;
    background-color: #ff5252;
}

.thisCityName {
    display: inline-block;
    border: 1rpx solid #2a579a;
    border-radius: 20rpx;
    padding: 10rpx 10rpx;
    font-size: 30rpx;
    color: #c9cec9;
    text-align: center;
    min-width: 149.5rpx;
    margin: 16rpx;
}

.hotcity-common {
    font-size: 30rpx;
    color: #666;
    padding-bottom: 0;
    margin: 8rpx 0;
    margin-left: 16rpx;
}

.banner {
    height: 400px;
    background-color: #ddd;
}

.customSwiper {
    height: 420rpx;
    position: relative;
}

.customSwiper swiper {
    height: 100%;
}

.tab {
    height: 7orpx;
    position: absolute;
    bottom: 0;
    display: flex;
    width: 100%;
    text-align: center;
    justify-content: center;
    align-items: center;
}

.tab .tab-item {
    background-color: #ccc;
    height: 50rpx;
    width: 50rpx;
    line-height: 50rpx;
    font-size: 12rpx;
    color: #fff;
    border-radius: 4px;
    margin-right: 10px;
}

.tab .tab-item.selected {
    background-color: #2a579a;
}

.weatherwrap {
    height: 100%;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    padding: 20rpx 20rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
    margin-top: 10rpx;
    font-size: 15px;
    background-color: #16436d5d;
    border-radius: 30rpx;
}

.info {
    margin-top: 20rpx;
    width: 100%;
    height: 225px;
}

.updateTime {
    width: 200rpx;
    height: 50rpx;
    box-sizing: border-box;
    font-size: 25rpx;
    color: white;
    background-color: rgba(6,11,26,0.486);
    border-radius: 20rpx;
    padding: 8rpx 5rpx 5rpx 20rpx;
    margin-left: 460rpx;
}

.tempImg_class {
    width: 600rpx;
    height: 100rpx;
    margin-left: 10rpx;
}

.tempImg {
    width: 95rpx;
    height: 90rpx;
}

.tempDesc {
    width: 100rpx;
    margin-left: 490rpx;
    font-size: 20rpx;
    color: white;
}

.temp {
    width: 100%;
    text-align: center;
    margin-top: -100rpx;
    margin-left: 90rpx;
}

.temTxt {
    font-size: 150rpx;
    padding: 0;
    color: #f1f1f1;
}

.weather {
    line-height: 22px;
    margin: 20rpx;
    padding: 0 10px;
    display: flex;
    flex-direction: row-reverse;
    justify-content: space-around;
}

.life {
    line-height: 22px;
    margin: 5px 0;
    padding: 0 5px;
}

.changeCity {
    margin-right: 5rpx;
    vertical-align: bottom;
}

.airQuality {
    height: 28rpx;
    width: 28rpx;
}

.tempMaxAndMin {
    color: white;
    font-size: 30rpx;
}

.airBoder {
    box-sizing: border-box;
    background-color: rgba(12,30,82,0.493);
    border-radius: 10rpx;
    color: white;
    font-size: 28rpx;
    word-break: break-all;
}

.swiper_container {
    margin-top: -5rpx;
    height: 45rpx;
    width: 600rpx;
    text-align: center;
    word-break: break-all;
}

.swiper_item {
    font-size: 25rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: white;
    margin-top: -2rpx;
    word-break: break-all;
}

.swiper_dec {
    text-align: center;
    box-sizing: border-box;
    border-radius: 5rpx;
}

.canvas {
    width: 100%;
    height: 200px;
}

.crepicture_img {
    width: 50rpx;
    height: 50rpx;
}

.crepicture_view {
    margin-left: 690rpx;
    margin-top: -90rpx;
}

.moreinfo {
    display: flex;
    color: white;
    font-size: 20rpx;
    margin-left: 600rpx;
}

.moreinfoimg {
    height: 25rpx;
    width: 25rpx;
    padding: 0;
}

.table {
    border: 1px solid #dadada;
    border-right: 0;
    border-bottom: 0;
    width: 98%;
}

.tr {
    width: 100%;
    display: flex;
    justify-content: space-between;
}

.th,.td {
    padding: 10rpx;
    border-bottom: 1px solid #dadada;
    border-right: 1px solid #dadada;
    text-align: center;
    width: 100%;
}

.th {
    font-weight: 400rpx;
    background-color: #dadada;
}

.containerforline {
    height: 100%;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    -webkit-text-size-adjust: none;
    -webkit-user-select: none;
    font-size: 35rpx;
    color: #333;
    font-family: Helvetica,Arial,"Helvetica Neue","Droid Sans","Microsoft YaHei",sans-serif;
    width: 100%;
}

.canvasforline {
    width: 700rpx;
    height: 400rpx;
}

.moreseven {
    display: flex;
    color: white;
    font-size: 20rpx;
    margin-left: 1rpx;
}

.moresevenimg {
    height: 25rpx;
    width: 25rpx;
    padding: 0;
}